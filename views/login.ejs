<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>后台</title>
    <link href="stylesheets/style-login.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
            var rememberMeB = true;
            function rememberMe(){
                  rememberMeB = !rememberMeB;
                  document.getElementById("rememberme").value = rememberMeB;
            }
    </script>
</head>
<body>
    <div id="box">
    <div class="elements">
    <div class="avatar"></div>
    <form action="/signin.node" method="post">

    <input type="text" name="username" class="username" placeholder="用户名" />
    <input type="password" name="password" class="password" placeholder="密码" />
    <input type="hidden" name="rememberme" id="rememberme" value="true" />
    <div class="forget"><a href="#">忘记密码?</a>
         <% if(error!= ''){ %>
              <span style="color:red;margin-left:50px;"><%=error%></span>
           <% } %>
   </div>
    <div class="checkbox">
    <input id="check" name="checkbox" type="checkbox" value="1" onclick="rememberMe();"/>
    <label for="check">Remember?</label>
    </div>
    <div class="remember">记住密码?</div>
    <input type="submit" name="submit" class="submit" value="登陆" />
    </form>
    </div>
    </div>
</body>
</html>